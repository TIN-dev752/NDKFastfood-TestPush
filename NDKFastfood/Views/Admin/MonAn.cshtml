@using NDKFastfood.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NDKFastfood.Models.MonAn>

@{
    ViewBag.Title = "MonAn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;font-weight:bold">Quản lý thông tin món ăn</h2>

<a style="font-size:20px;color:black;padding-left:60px" href="@Url.Action("ThemMonAn","Admin")"><i class="fa fa-plus-circle"> Thêm mới</i></a>

<table align="center" border="2" cellpadding="10">
    <tr align="center" , style="height:50px">
        <th style="width:270px;color:red;font-size:20px">Tên món</th>
        <th style="width:125px;color:red;font-size:20px">Giá bán</th>
        <th style="width:325px;color:red;font-size:20px">Mô tả</th>
        <th style="width:200px;color:red;font-size:20px">Ảnh đại diện</th>
        <th style="width:145px;color:red;font-size:20px">Số lượng tồn</th>
        <th style="width:145px;color:red;font-size:20px">Loại món</th>
        <th style="width:200px;color:red;font-size:20px">Công cụ</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr align="center" , style="height:50px">
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.TenMon)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td style="font-weight:bold">
                <img src="@Url.Content("~/Assets/Images/"+item.AnhDD)" width="100%" />
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.Loai.TenLoai)
            </td>
            <td>
                <a style="font-size:20px;color:black" href="@Url.Action("SuaMonAn","Admin", new { id = item.MaMon })"><i class="fa fa-edit"> Sửa</i></a>
                <br />
                <a style="font-size:20px;color:black" href="@Url.Action("ChiTietMonAn","Admin", new { id = item.MaMon })"><i class="fa fa-info-circle"> Chi tiết</i></a>
                <br />
                <a style="font-size:20px;color:black" href="@Url.Action("XoaMonAn","Admin", new { id = item.MaMon })"><i class="fa fa-trash"> Xóa</i></a>
            </td>
        </tr>
    }
</table>
<div style="padding-left:1375px;font-size:20px;padding-top:10px;font-weight:bold">
    @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    <div class="product__pagination">
        @Html.PagedListPager(Model, page => Url.Action("MonAn", new { page = page }))
    </div>
</div>


